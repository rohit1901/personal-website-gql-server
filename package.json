{
  "name": "personal-website-graphql-server",
  "version": "1.0.0",
  "description": "Node.js + Express.js + TypeScript server for my personal website.",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.2.0"
  },
  "main": "./src/app.ts",
  "author": "Rohit Khanduri",
  "repository": "https://github.com/rohit1901/personal-website-gql-server",
  "issues": "https://github.com/rohit1901/personal-website-gql-server/issues",
  "keywords": [
    "node",
    "express",
    "typescript",
    "graphql",
    "mongodb"
  ],
  "scripts": {
    "status": "tsc --p tsconfig.json --listFiles",
    "test": "jest --detectOpenHandles --forceExit",
    "start": "npm run build && node -r module-alias/register ./dist/app.js",
    "build": "tsc -p ./tsconfig.prod.json && cp ./src/graphql/schema.graphql ./dist/graphql/schema.graphql",
    "generate": "graphql-codegen",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/app.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "_moduleAliases": {
    "@/routes": "dist/routes",
    "@/data": "dist/data",
    "@/middleware": "dist/middleware",
    "@/controllers": "dist/controllers",
    "@/db": "dist/db",
    "@/utils": "dist/utils",
    "@/resolvers": "dist/resolvers"
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "graphql": "^16.8.1",
    "gql-tag": "^1.0.1",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "express-rate-limit": "^7.2.0",
    "express-oauth2-jwt-bearer": "^1.6.1",
    "mongodb": "^6.5.0",
    "dotenv": "^16.5.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "node-html-parser": "^6.1.13",
    "module-alias": "^2.2.3",
    "xss": "^1.0.15",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.12.7",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/hpp": "^0.2.6",
    "@types/morgan": "^1.9.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@types/jest": "^29.5.12",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "nodemon": "^3.1.0"
  }
}
